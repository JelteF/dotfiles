function! GoLintFull()
    let l:old_opts = g:ale_go_gometalinter_options
    let g:ale_go_gometalinter_options = '--disable="vet" --disable="golint" --disable="gotype" --disable="structcheck" --disable="unconvert" --disable="varcheck" --disable="aligncheck"'
    ALELint
    let g:ale_go_gometalinter_options = l:old_opts
endfunction


